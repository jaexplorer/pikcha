@page
@model RegisterModel
<!DOCTYPE html>
<html lang="en" class="gr__localhost">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <link rel="shortcut icon" href="/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Pikcha">
    <base href="%PUBLIC_URL%/" />
    <link rel="manifest" href="/manifest.json">
    <title>Pikcha</title>
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body data-gr-c-s-loaded="true">
    <noscript>You need to enable JavaScript to run this app.</noscript>

    <div class='navbar-top'>
        <div class='guest-items'>
            <div class='nav-logo'>
            <a to='/'>
                <img src="~/img/logo-coloured.png" alt='' />
            </a>
            </div>
            <a href='/pikcha100'>Pikcha 100</a>
            <a href='/artist100'>Artist 100</a>
        </div>
        <div class='auth-links'>
            <a href="/Authentication/Register">Signup</a>
            <a href="/Authentication/Login">Login</a>
        </div>
    </div>

    <div class="auth-container">
        <form class="auth-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-title">Sign up</div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="wrapper-group">
                <div class="input-wrapper">
                    <div class="input-title">First Name</div>
                    <input class="input-field" asp-for="Input.FName">
                    <span asp-validation-for="Input.FName" class="text-danger"></span>
                </div>
                <div class="input-wrapper">
                    <div class="input-title">Last Name</div>
                    <input class="input-field" asp-for="Input.LName">
                    <span asp-validation-for="Input.LName" class="text-danger"></span>
                </div>
            </div>
            <div class="input-wrapper">
                <div class="input-title">Email</div>
                <input class="input-field" asp-for="Input.Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="wrapper-group">
                <div class="input-wrapper">
                    <div class="input-title">Password</div>
                    <input class="input-field" asp-for="Input.Password">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="input-wrapper">
                    <div class="input-title">Confirm Password</div>
                    <input class="input-field" asp-for="Input.ConfirmPassword">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-btn">
                <input type="submit" value="Register">
            </div>
            <div class="text-center"><a href="/Identity/Account/Login">Already have an account?</a></div>
        </form>
    </div>
</body>
</html>